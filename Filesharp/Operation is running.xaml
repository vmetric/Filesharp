<Window x:Class="Filesharp.Operation_is_running"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filesharp"
        mc:Ignorable="d"
        Title="Operation_is_running" Height="200" Width="800">
    <Grid>
        <TextBlock x:Name="textblock1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="An operation is currently in progress, please wait while it finishes." VerticalAlignment="Top" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run FontSize="20" Text="Progress:"/></TextBlock>
        <TextBlock x:Name="textblock_Progress" HorizontalAlignment="Left" Margin="115,84,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Window>
